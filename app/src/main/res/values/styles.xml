<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
    </style>

    <style name="MyActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/Yellow_TradeMe</item>
        <item name="background">@color/Yellow_TradeMe</item>
    </style>

    <style name="CustomCirclePageIndicator">
        <item name="fillColor">@color/Blue_TradeMe</item>
        <item name="strokeColor">@color/Gray_LightGray</item>
        <item name="strokeWidth">1dp</item>
        <item name="radius">5dp</item>
        <item name="centered">true</item>
    </style>

</resources>
